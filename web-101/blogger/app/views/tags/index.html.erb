<h1>Tags</h1>

<ul>
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag) %>,
      <%= link_to "Delete", tag_path(tag), method: :delete, data: {confirm: "Do you want to delete the tag?"} %>
    </li>
  <% end %>
</ul>
<br />
<p>
  <%= link_to "Back to articles list", articles_path %>
</p>